<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.android.cvbuilderapp.UserFormActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:theme="@style/PopupOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarUser"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1995ad"
            app:popupTheme="@style/PopupOverlay">

        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Resume"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:hint="Enter CV Name"
            android:id="@+id/etCVName"
            android:layout_marginTop="28dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btPersonalDet"
            android:textSize="12sp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:text="Personal Details"
            android:layout_marginTop="20dp"/>

        <Button
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="24dp"
            android:id="@+id/btEducat"
            android:layout_marginLeft="24dp"
            android:text="Educational Qualification"
            android:layout_marginTop="10dp"/>
        <Button
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="24dp"
            android:id="@+id/btCert"
            android:text="Projects"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="24dp"
            android:id="@+id/btProExp"
            android:text="Professional Experience"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btSocialLink"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:text="Social Links"
            android:layout_marginTop="10dp"/>
        <Button
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btSkills"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:text="Skills"

            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btInterest"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textSize="12sp"
            android:text="Interest"
            android:layout_marginTop="10dp"/>
    </android.support.design.widget.AppBarLayout>




    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_nav_drawer"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
